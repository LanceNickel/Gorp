#!/usr/bin/env bash

### [MCSTART] #####################################################
#   Description:  Action script to setup startup worker.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



# PERMISSIONS GUARD

if [[ "$EUID" != 0 ]]; then
        echo "mcstart: Insufficient privilege. Exiting."
        exit
fi



# SCRIPT VARIABLES

SERVER=$1



####



# PARAM GUARD

if [ "$SERVER" = "" ]; then
    echo "mcstart: Please specify a server. Exiting."
    exit
fi



# SERVER DIRECTORY GUARD

if [ -d "/minecraft/servers/$SERVER" ]; then
    cd /minecraft/servers/$SERVER
else
    echo "mcstart: Specified server doesn't exist. Exiting."
    exit
fi



# SCREEN GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mcstart: Server '$SERVER' is already running. Exiting."
        exit
fi



# RUN STARTUP WORKER

/usr/local/bin/gorputils/worker/start.sh $SERVER