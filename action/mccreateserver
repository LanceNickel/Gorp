#!/usr/bin/env bash

### [ACTION: CREATE-SERVER] #######################################
#   Description:  Create a new server instance.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################

# Copyright (C) Lance Nickel 2023.
# Distributed under GNU GPL v3.
# <https://gorp.lanickel.com/license/>



#### GUARDS ################

### KEY GUARD

if [[ "$1" == "pleasedontdothis" ]]; then
    handle_error "Script not meant to be run directly"
fi








#### SCRIPT PARAMETERS ################

SERVER=$2

# World name override

if [[ "$3" == "" ]]; then
    WORLD="default"
else
    WORLD=$3
fi







####







### PARAM RT-GUARD

if [[ "$SERVER" == "" ]]; then
    handle_error "Bad input. Expected: gorp create-server [server-name] <world-name>"
fi







### SERVER DIRECTORY RT-GUARD

if [[ -d "$HOMEDIR/servers/$SERVER" ]]; then
    handle_error "Server already exists"
fi







### USER EULA AND AGREEMENT RT-GUARD

if $OUTPUT; then echo -e "\n==== IMPORTANT! ====\nTo continue you must agree to the Minecraft EULA (https://aka.ms/MinecraftEULA)."; fi

read -r -p "Do you agree to the Minecraft EULA? [y/n]: " response
if [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]; then
    sleep 0.25
else
    handle_error "You must agree to the EULA"
fi








### RUN THE CREATOR WORKER

source /usr/local/bin/gorpmc/worker/createserver.sh $1 $SERVER $WORLD || handle_error "Failed to run createserver.sh worker"
