#!/usr/bin/env bash

### [MCCREATEWORLD] ###############################################
#   Description:  Action script to setup world creator worker.
#   Parameters:   1: (required) Server directory name
#                 2: (optional) World (level) name for directory

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mccreateworld: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

HOMEDIR=$(getHomedir)
SERVER=$2
NEW_WORLD=$3



####



# PARAM RT-GUARD

if [ "$SERVER" = "" ]; then
    echo "mccreateworld: Server name missing. Expected command format: 'gorp create-world [server-name] <world-name>'. Exit (14)."
    exit 14
fi



# SERVER DIRECTORY RT-GUARD

if [ -d "$HOMEDIR/servers/$SERVER" ]; then
    sleep 0.05
else
    echo "mccreateworld: Server doesn't exist. Exit (20)."
    exit 20
fi



# WORLD DIRECTORY RT-GUARD (when world name passed as param)

if [ "$NEW_WORLD" != "" ]; then

    if [ -d "$HOMEDIR/servers/$SERVER/world-$NEW_WORLD" ]; then
        echo "mccreateworld: A world with name '$NEW_WORLD' already exists. Exit (21)."
        exit 21
    fi

fi



# SCREEN RT-GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mccreateworld: Server cannot be running. Exit (32)."
        exit 32
fi



# RUN THE WORLD CREATOR WORKER

/usr/local/bin/mc/worker/createworld.sh pleasedontdothis $SERVER $NEW_WORLD