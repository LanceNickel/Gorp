#!/usr/bin/env bash

### [ACTION: RESTORE-WORLD] #######################################
#   Description:  Restore world's files from backup to server.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################

# Copyright (C) Lance Nickel 2023.
# Distributed under GNU GPL v3.
# <https://gorp.lanickel.com/license/>



#### GUARDS ################

### KEY GUARD

if [[ "$1" == "pleasedontdothis" ]]; then
    handle_error "Script not meant to be run directly"
fi







#### SCRIPT PARAMETERS ################

SERVER=$2







####







### PARAM RT-GUARD

if [[ "$SERVER" == "" ]]; then
    handle_errors "Bad input. Expected: gorp restore-world [server-name]"
fi







### SERVER DIRECTORY RT-GUARD

if [[ -d "$BACKUP_DEST/$SERVER" ]]; then
    sleep 0.005
else
    handle_errors "Server has no backups to restore from"
fi







### SCREEN RT-GUARD

if [[ $(screen -ls | grep "$SERVER") != "" ]]; then
        handle_errors "Server cannot be running"
fi







### RUN RESTORE WORKER

bash /usr/local/bin/gorpmc/worker/restoreworld.sh $1 $SERVER || handle_error "Failed to run restoreworld.sh worker"