#!/usr/bin/env bash

### [MCBACKUPWORLD] ################################################
#   Description:  Action script to setup world backup worker.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcbackupworld: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

SERVER=$2



####



# PARAM RT-GUARD

if [ "$SERVER" = "" ]; then
    echo "mcbackupworld: Bad input. Expected: gorp backup-world [server-name]. Exit (14)."
    exit 14
fi



# SERVER DIRECTORY RT-GUARD

if [ -d "$HOMEDIR/servers/$SERVER" ]; then
    # we can continue
    sleep 0.005
else
    echo "mcbackupworld: Server not found. Exit (30)."
    exit 30
fi



# NO WORLDS RT-GUARD

if [[ $(ls $HOMEDIR/servers/$SERVER/ | grep 'world') = "" ]]; then
    echo -e "mcbackupworld: No worlds exist on this server. Exit (42)."
    exit 42
fi



# RUN BACKUP WORKER

/usr/local/bin/gorpmc/worker/backupworld.sh pleasedontdothis $SERVER