#!/usr/bin/env bash

### [MCDELETESERVER] ##############################################
#   Description:  Action script to setup server delete worker.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcdeleteserver: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

HOMEDIR=$(getHomedir)
SERVER=$2



####



# PARAM RT-GUARD

if [ "$SERVER" = "" ]; then
    echo "mcdeleteserver: Please specify a server. Exit (14)."
    exit 14
fi



# NO SERVERS RT-GUARD

if [[ $(ls $HOMEDIR/servers/) = "" ]]; then
    echo -e "mcdeleteserver: No server instances exist..\nRun 'gorp create-server [name]' to create a new server. Exit (20)."
    exit 20
fi



# SERVER DIRECTORY RT-GUARD

if [ -d "$HOMEDIR/servers/$SERVER" ]; then
    cd $HOMEDIR/servers/$SERVER
else
    echo "mcdeleteserver: Specified server doesn't exist. Exit (20)."
    exit 20
fi



# SCREEN RT-GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mcdeleteserver: Server cannot be running. Exit (32)."
        exit 32
fi



# RUN DELETE WORKER

/usr/local/bin/gorpmc/worker/deleteserver.sh pleasedontdothis $SERVER