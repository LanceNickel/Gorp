#!/usr/bin/env bash

### [MCDELETESERVER] ##############################################
#   Description:  Action script to setup server delete worker.
#   Parameters:   1: (required) Server directory name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcdeleteserver: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

source /usr/local/bin/gorpmc/worker/i_getconfigparams.sh

SERVER=$2



####



# PARAM RT-GUARD

if [[ "$SERVER" = "" ]]; then
    echo "mcdeleteserver: Bad input. Expected: gorp delete-server [server-name]. Exit (14)."
    exit 14
fi



# SERVER DIRECTORY RT-GUARD

if [[ -d "$HOMEDIR/servers/$SERVER" ]]; then
    cd $HOMEDIR/servers/$SERVER
else
    echo "mcdeleteserver: Server not found. Exit (30)."
    exit 30
fi



# SCREEN RT-GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mcdeleteserver: Server cannot be running. Exit (34)."
        exit 34
fi



# RUN DELETE WORKER

/usr/local/bin/gorpmc/worker/deleteserver.sh pleasedontdothis $SERVER