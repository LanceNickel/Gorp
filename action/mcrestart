#!/usr/bin/env bash

### [MCRESTART] ###################################################
#   Description:  Action script to setup restart worker.
#   Parameters:   1: (required) Server directory name
#                 2: (optional) <fast, now>

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



# PERMISSIONS GUARD

if [[ "$EUID" != 0 ]]; then
    echo "mcrestart: Insufficient privilege. Exiting."
    exit
fi



# SCRIPT VARIABLES

SERVER=$1
SPEED=$2



####



# PARAM GUARD

if [ "$SERVER" = "" ]; then
    echo "mcrestart: Please specify a server"
    exit

elif [ "$SERVER" == 'fast' ] || [ "$SERVER" == 'now' ] || [ "$SERVER" == 'power' ]; then
    echo -e "mcrestart: Bad command. Expected form: 'mcstop <server> <argument>'. Exiting.\nUse 'gorp help' for more information."
    exit
fi



# SERVER DIRECTORY GUARD

if [ -d "$HOMEDIR/servers/$SERVER" ]; then
    cd $HOMEDIR/servers/$SERVER
else
    echo "mcrestart: Specified server doesn't exist. Exiting."
    exit
fi



# NO SCREEN GUARD

if [[ $(screen -ls | grep "$SERVER")  = "" ]]; then
        echo "mcrestart: Server '$SERVER' is not running. Exiting."
        exit
fi



# RUN WORKERS BASED ON PASSED PARAMS

if [ -z "$SPEED" ]; then
    /usr/local/bin/gorpmc/worker/backupworld.sh $SERVER
    /usr/local/bin/gorpmc/worker/warning.sh $SERVER restart
    /usr/local/bin/gorpmc/worker/shutdown.sh $SERVER
    /usr/local/bin/gorpmc/worker/start.sh $SERVER

elif [ $SPEED == "fast" ]; then
    /usr/local/bin/gorpmc/worker/warning.sh $SERVER stop
    /usr/local/bin/gorpmc/worker/shutdown.sh $SERVER
    /usr/local/bin/gorpmc/worker/start.sh $SERVER

elif [ $SPEED == "now" ]; then
    /usr/local/bin/gorpmc/worker/shutdown.sh $SERVER
    /usr/local/bin/gorpmc/worker/start.sh $SERVER

else
    echo "mcrestart: Invalid second parameter. Exiting."
    exit
fi