#!/usr/bin/env bash

### [MCDELETEWORLD] ###############################################
#   Description:  Action script to setup world delete worker.
#   Parameters:   1: (required) Server directory name
#                 2: (optional) World (level) name for directory

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcdeleteworld: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

SERVER=$2
WORLD_TO_DELETE=$3



####



# PARAM RT-GUARD

if [[ "$SERVER" = "" ]]; then
    echo "mcdeleteworld: Bad input. Expected: gorp delete-world [server-name] <world-name>. Exit (14)."
    exit 14
fi



# SERVER DIRECTORY RT-GUARD

if [[ -d "$HOMEDIR/servers/$SERVER" ]]; then
    sleep 0.05
else
    echo "mcdeleteworld: Server not found. Exit (30)."
    exit 30
fi



# NO WORLDS RT-GUARD

if [[ $(ls $HOMEDIR/servers/$SERVER/ | grep 'world') = "" ]]; then
    echo -e "mcdeleteworld: No worlds exist on this server. Exit (42)."
    exit 42
fi



# SCREEN RT-GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mcdeleteworld: Server cannot be running. Exit (34)."
        exit 34
fi



# WORLD DIRECTORY RT-GUARD (when world name passed as param)

if [[ "$WORLD_TO_DELETE" != "" ]]; then

    if [ -d "$HOMEDIR/servers/$SERVER/world-$WORLD_TO_DELETE" ]; then
        sleep 0.005
    else
        echo "mcdeleteworld: World not found. Exit (40)."
        exit 40
    fi

fi



# RUN THE WORLD DELETE WORKER

/usr/local/bin/gorpmc/worker/deleteworld.sh pleasedontdothis $SERVER $WORLD_TO_DELETE