#!/usr/bin/env bash

### [MCPOWER] #####################################################
#   Description:  Action script that does mcstop action on all.
#   Parameters:   None

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcpower: Not intended to be run directly. Exit (13)."
    exit 13
fi



####



# FOR EACH SERVER, RUN SHUTDOWN ACTION WITH POWER PARAM

for d in "$HOMEDIR/servers/"*
do
        SERVER=$(echo $(basename "$d"))
        /usr/local/bin/gorpmc/action/mcstop $SERVER power
done