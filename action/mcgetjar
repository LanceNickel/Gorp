#!/usr/bin/env bash

### [MCGETJAR] ####################################################
#   Description:  Action script to setup jar download worker.
#   Parameters:   1: (required) Game version

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcgetjar: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT OPTS ################

OPTIND=2
while getopts ":u:v:" flag; do
    case $flag in
        u)
            MODE="u"
            ARG="$OPTARG"
            ;;
        v)
                MODE="v"
                ARG="$OPTARG"
                ;;
        \?)
            echo "Bad input. Expected: gorp get-jar [-u | -v] [url | version]. Exit (14)."
            exit 14
            ;;
        :)
            echo "Bad input. Expected: gorp get-jar [-u | -v] [url | version]. Exit (14)."
            exit 14
            ;;
    esac
done
        
        


####



### PARAM RT-GUARD

if [[ "$MODE" == "" ]]; then
    echo "mcgetjar: Bad input. Expected: gorp get-jar [game-version]. Exit (14)."
    exit 14
fi



# RUN JAR DOWNLOADER

/usr/local/bin/gorpmc/worker/getjar.sh pleasedontdothis "$MODE" "$ARG"