#!/usr/bin/env bash

### [MCGETJAR] ####################################################
#   Description:  Action script to setup jar download worker.
#   Parameters:   1: (required) Game version

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



# PERMISSIONS GUARD

if [[ "$EUID" != 0 ]]; then
    echo "mcupdate: Insufficient priviliege. Exiting."
    exit
fi



# SCRIPT VARIABLES

VERSION=$1



####



# PARAM GUARD

if [ "$VERSION" = "" ]; then
    echo "mcgetjar: Please specify a game version. Exiting."
    exit
fi



# RUN JAR DOWNLOADER

/usr/local/bin/gorpmc/worker/getjar.sh $VERSION