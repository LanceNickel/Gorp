#!/usr/bin/env bash

### [MCRESETWORLD] ################################################
#   Description:  Action script to setup world reset worker.
#   Parameters:   1: (required) Server directory name
#                 2: (optional) World (level) name for directory

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



#### GUARDS ################

### KEY GUARD

if [[ "$1" != "pleasedontdothis" ]]; then
    echo "mcresetworld: Not intended to be run directly. Exit (13)."
    exit 13
fi



#### SCRIPT PARAMETERS ################

SERVER=$2
WORLD_TO_DELETE=$3
HOMEDIR=$(getHomedir)


####



# PARAM GUARD

if [[ "$SERVER" = "" ]]; then
    echo "mcresetworld: Bad input. Expected: gorp reset-world [server-name] <world-name>. Exit (14)."
    exit 14
fi



# SERVER DIRECTORY GUARD

if [[ -d "$HOMEDIR/servers/$SERVER" ]]; then
    sleep 0.05
else
    echo "mcresetworld: Server not found. Exit (30)."
    exit 30
fi



# NO WORLDS GUARD

if [[ $(ls $HOMEDIR/servers/$SERVER/ | grep 'world') = "" ]]; then
    echo -e "mcresetworld: No worlds exist on this server. Exit (42)."
    exit 42
fi



# RUN THE WORLD DELETE WORKER

/usr/local/bin/gorpmc/worker/resetworld.sh pleasedontdothis $SERVER