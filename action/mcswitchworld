#!/usr/bin/env bash

### [MCSWITCHWORLD] ###############################################
#   Description:  Action script to setup world switch worker.
#   Parameters:   1: (required) Server directory name
#                 2: (optional) Server world name

############################ [WARNING] ############################
##    No part of this script is designed to be user-editable.    ##
##   This script is OVERWRITTEN any time a Gorp update is run.   ##
###################################################################



# PERMISSIONS GUARD

if [[ "$EUID" != 0 ]]; then
    echo "mcswitchworld: Insufficient privilege. Exiting."
    exit
fi



# SCRIPT VARIABLES

SERVER=$1
SWITCH_TO=$2



####



# PARAM GUARD

if [ "$SERVER" = "" ]; then
    echo "mcswitchworld: Server name missing. Expected command format: 'gorp switch-world [server-name] <world-name>'"
    exit
fi



# SERVER DIRECTORY GUARD

if [ -d "/minecraft/servers/$SERVER" ]; then
    sleep 0.05
else
    echo "mcswitchworld: Server doesn't exist. Exiting."
    exit
fi



# NO WORLDS GUARD

if [[ $(ls /minecraft/servers/$SERVER/ | grep 'world') = "" ]]; then
    echo -e "mcswitchworld: No worlds exist on this server instance.\nRun 'gorp create-world $SERVER [name]' to create a new world."
    exit
fi



# WORLD DOESN'T EXIST GUARD (when world name passed as param)

if [ "$SWITCH_TO" != "" ]; then

    if [ -d "/minecraft/servers/$SERVER/world-$SWITCH_TO" ]; then
        sleep 0.005
    else
        echo "mcswitchworld: Specified world does not exist. Exiting."
        exit
    fi

fi



# SCREEN GUARD

if [[ $(screen -ls | grep "$SERVER")  != "" ]]; then
        echo "mcswitchworld: Server '$SERVER' is running. Stop the server and then switch worlds. Exiting."
        exit
fi



# RUN THE WORLD CREATOR WORKER

/usr/local/bin/gorputils/worker/switchworld.sh $SERVER $SWITCH_TO